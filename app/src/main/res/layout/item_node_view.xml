<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>

        <variable name="viewModel" type="com.ddddl.v2ex.viewmodel.NodeItemViewModel"/>

    </data>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/node_nav_color"
            android:textColor="@color/black_aa"
            android:paddingBottom="@dimen/node_item_padding_top_bottom"
            android:paddingEnd="@dimen/node_item_padding_left_right"
            android:paddingStart="@dimen/node_item_padding_left_right"
            android:paddingTop="@dimen/node_item_padding_top_bottom"
            android:textSize="15sp"
            android:text="@{viewModel.node}"
    />


</layout>

